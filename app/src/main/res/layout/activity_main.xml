<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sv_layout_content"
        android:background="@color/colorBlue">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_img_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            app:riv_oval="true"
            app:riv_border_color="#000"
            app:riv_border_width="2dp"/>

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:text="point"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            android:layout_marginTop="15dp"
            android:textAllCaps="false"
            android:text="money"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/btn_navigation_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>



    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/sv_layout_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_navigation_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_btn_change_model"
        android:background="@color/colorLightBlue">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:riv_corner_radius="30dp"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_game_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 1"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:riv_corner_radius="30dp"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                android:scaleType="center"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_game_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 2"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_1"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:riv_corner_radius="30dp"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                android:scaleType="center"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_game_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 3"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_2"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:riv_corner_radius="30dp"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                android:scaleType="center"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_game_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 4"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_3"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_5"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:riv_corner_radius="30dp"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                android:scaleType="center"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/tv_game_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 5"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>





        </android.support.constraint.ConstraintLayout>




    </ScrollView>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_btn_change_model"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_layout_content">

        <Button
            android:id="@+id/btn_lower_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:text="lower_model"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_medium_model"
            android:background="@drawable/bg_rounded_rectangle"
            android:padding="5dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/btn_lower_model"
            app:layout_constraintRight_toLeftOf="@id/btn_medium_model"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorGrayDark"/>

        <Button
            android:id="@+id/btn_medium_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:text="medium_model"
            app:layout_constraintLeft_toRightOf="@id/btn_lower_model"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_higher_model"
            android:background="@drawable/bg_rounded_rectangle"
            android:padding="5dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_medium_model"
            app:layout_constraintRight_toLeftOf="@id/btn_higher_model"
            android:background="@color/colorGrayDark"/>

        <Button
            android:id="@+id/btn_higher_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:text="higher_model"
            app:layout_constraintLeft_toRightOf="@id/btn_medium_model"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_rounded_rectangle"
            android:padding="5dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>