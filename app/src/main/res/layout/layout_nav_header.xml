<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rv_image_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        app:riv_border_width="2dp"
        app:riv_oval="true"
        app:riv_border_color="@color/colorBlackTransparent99"
        android:src="@drawable/icon_image_head" />

    <TextView
        android:id="@+id/tv_money"
        app:layout_constraintStart_toEndOf="@id/rv_image_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:text="Money"/>

    <TextView
        android:id="@+id/tv_point"
        app:layout_constraintStart_toEndOf="@id/rv_image_head"
        app:layout_constraintTop_toBottomOf="@id/tv_money"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:text="Point"/>


</androidx.constraintlayout.widget.ConstraintLayout>