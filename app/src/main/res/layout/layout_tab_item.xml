<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_layout_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorLightBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_1"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                app:riv_corner_radius="30dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_game_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 1"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_1"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                app:riv_corner_radius="30dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_game_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 2"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_2"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                app:riv_corner_radius="30dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_game_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 3"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_2" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_3"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                app:riv_corner_radius="30dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_game_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 4"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@id/riv_gmae_5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_3" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_gmae_5"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_4"
                app:riv_border_color="@color/colorPrimaryDark"
                app:riv_border_width="5dp"
                app:riv_corner_radius="30dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_game_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game 5"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/riv_gmae_4" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>